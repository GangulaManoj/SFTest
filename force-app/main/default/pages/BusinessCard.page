<apex:page sidebar="false" showHeader="false" applyBodyTag="false" applyHtmlTag="false" lightningStylesheets="false" >
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
         <head>
            <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" />
        <title>SLDS UserBusiness Card Visualforce Page in Salesforce Mobile</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
            <apex:slds />
        </head>
        <body>
            <div class="slds-scope">
                

            <article class="slds-card">
  <div class="slds-card__header slds-grid">
    <header class="slds-media slds-media_center slds-has-flexi-truncate">
      <div class="slds-media__figure">
        <span class="slds-icon_container slds-icon-standard-account" title="account">
          <svg class="slds-icon slds-icon_small" aria-hidden="true">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#user"></use>
          </svg>
          <span class="slds-assistive-text">User</span>
        </span>
      </div>
      <div class="slds-media__body">
        <h2 class="slds-card__header-title">
          <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
            <span>User Details</span>
          </a>
        </h2>
      </div>
    </header>
  </div>
                
  <div class="slds-card__body slds-card__body_inner">
      User FirstName : {!$User.FirstName}<br/>
      User LastName : {!$User.LastName}<br/>
      User Email : {!$User.Email}<br/>
      User Phone : {!$User.Phone}<br/>
      User Title : {!$User.Title}
  </div>
</article>
                <div class="myapp">
                    <div class="slds-form-element">
            <label class="slds-form-element__label slds-text-heading_medium 
                          slds-p-bottom_medium" for="text-input-id-1">Email Address:</label>
            <div class="slds-form-element__control">
                <input type="text" id="userEmail" class="slds-input"/>
            </div>
          </div>
          <!-- / INPUT FIELD -->
          <!-- BUTTON -->
          <button class="slds-button_neutral slds-size_1-of-1 
                         slds-m-top_x-small slds-p-bottom_x-small slds-p-top_x-small" 
                         >Send</button>
                </div>
                            </div>
        </body>
    </html>
</apex:page>